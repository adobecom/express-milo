{
  // === Cursor Code Generation Settings ===
  // Use your project's exact ESLint configuration
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // === ESLint Integration ===
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": ["javascript", "typescript"],
  
  // === Your Project's Exact Rules ===
  // Based on .eslintrc.cjs - extends 'airbnb-base'
  
  // Indentation: 2 spaces (from airbnb-base)
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  
  // Line length: 100 characters (from airbnb-base max-len rule)
  "editor.rulers": [100],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  
  // Trailing spaces and commas (auto-fix these)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.trimAutoWhitespace": true,
  
  // === Cursor AI Prompts for Your Rules ===
  "cursor.cpp.includePath": [],
  
  // Custom rules instruction for Cursor AI
  "cursor.ai.rules": [
    "Always use 2-space indentation (never 4 spaces)",
    "Always add trailing commas in multiline objects and arrays",
    "Keep lines under 100 characters",
    "Use parentheses around arrow function parameters: (param) => not param =>",
    "Add eslint-disable-next-line no-underscore-dangle for API _links properties",
    "Always add default cases to switch statements",
    "Remove unused parameters in event handlers: use () instead of (e)",
    "Ensure consistent returns in arrow functions",
    "Follow airbnb-base ESLint configuration",
    "Import JS files with .js extension: import './file.js' not './file'",
    "Use unix linebreaks (LF)",
    "Max 2 statements per line",
    "No console.log in production code (except in test/ folder)"
  ],
  
  // === File Associations ===
  "files.associations": {
    "*.cjs": "javascript"
  },
  
  // === CSS/Stylelint ===
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  
  // === Auto-save linting ===
  "editor.formatOnType": false,
  "editor.formatOnPaste": true,
  
  // === Project-specific overrides ===
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  
  // === Cursor-specific AI settings ===
  "cursor.ai.model": "claude-3.5-sonnet", 
  "cursor.chat.sendCodeContext": true,
  
  // Disable VS Code's built-in JS/TS validation (use ESLint instead)
  "javascript.validate.enable": false,
  "typescript.validate.enable": false
}